<nav class="ui inverted stackable menu" id="navbar">
    <div class="ui container">

        <% if(pageName == 'index' ) { %>
            <a href="#" class="header item">
                <img class="logo" src="/images/pepe.png">Patoka Memes
            </a>
        <% } else { %>
            <a href="/" class="header item">
                <img class="logo" src="/images/pepe.png">Patoka Memes
            </a>
        <% } %>
        <div class="left menu">
            <% if(pageName == 'index' ) { %>
                <a href="#" class="active item">
                    Home
                </a>
            <% } else { %>
                <a href="/" class="item">
                    Home
                </a>
            <% } %>
            <% if(pageName == 'memes' ) { %>
                <a href="#" class="active item">
                    Memes
                </a>
            <% } else { %>
                <a href="/memes" class="item">
                    Memes
                </a>
            <% } %>
        </div>
        
        <div class="right menu">
            <% if (user) { %>
                <div class="item">
                    <div class="ui simple dropdown">
                        <img class="ui avatar image" src="/users/<%=user.id%>/avatar">
                        <span class="text"><%=user.username%></span>
                        <div class="menu">
                            <a href="/profile" class="item">
                                Profile
                            </a>
                            <div @click="logout" class="item">
                                Log out
                                <i class="sign out icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="item">
                    <% if(pageName == 'login' ) { %>
                        <a class="ui inverted button" href="#">Log in</a>
                    <% } else { %>
                        <a class="ui inverted button" href="/login">Log in</a>
                    <% } %>
                </div>
                <div class="item">
                    <% if(pageName == 'register' ) { %>
                        <a class="ui inverted button" href="#">Sign Up</a>
                    <% } else { %>
                        <a class="ui inverted button" href="/register">Sign Up</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</nav>