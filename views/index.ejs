<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="icon" href="images/pepe.png" type="image/png">
    <title>patokaMemes</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://unpkg.com/vue"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@0.12.0/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">

</head>

<body>
    <div id="app">
        
        <% var pageName = "index" %>
        <% include partials/navbar %>
        <!-- navbar -->
        

        <div id="content">

            <h1 class="center">Choose better meme</h1>

            <div class="ui centered grid" id="memeChooser">

                <div class="row">
                    <div class="ui center special cards">
                        <div class="column meme-image">
                            <div class="blurring dimmable image">
                                <div class="ui dimmer center">
                                    <div class="content">
                                        <div class="center">
                                            <div class="ui inverted button" @click="chooseMeme('left')">Choose meme</div>
                                        </div>
                                    </div>
                                </div>
                                <!-- <img src="images/meme1.jpg"> -->
                                <img :src="leftMeme.url">
                            </div>
                        </div>

                        <div class="column">
                            <div class="blurring dimmable image">
                                <div class="ui dimmer center">
                                    <div class="content">
                                        <div class="center">
                                            <div class="ui inverted button" @click="chooseMeme('right')">Choose meme</div>
                                        </div>
                                    </div>
                                </div>
                                <!-- <img src="images/meme2.jpg"> -->
                                <img :src="rightMeme.url">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <script src="javascripts/model.js"></script>
    <script>
        $('.special.cards .image').dimmer({
            on: 'hover'
        });
    </script>
</body>

</html>